<div class="item">
  <div>Email</div>
  <div class="input" >
    <input 
    type="email" 
    name="email" 
    placeholder="exemplo@email.com"
    value="{{user.email}}" 
    onblur="Validate.apply(this, 'isEmail')"
    >
  </div>
</div>

<div class="item">
  <div>Nova senha</div>
  <div class="input" >
    <input 
    type="password" 
    name="password" 
    placeholder="Digite sua senha" 
    >  
  </div>
</div>


<div class="item">
  <div>Confirmar senha</div>
  <div class="input" >
    <input 
    type="password" 
    name="passwordRepeat" 
    placeholder="Digite sua senha novamente" 
    >  
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">
